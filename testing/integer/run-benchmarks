#!/bin/sh

# Directories:
# - AMD
#   - BinarySearch
#   - BitonicSort
#   - FloydWarshall
#   - StringSearch
# - rodinia
#   - bfs
#   - nw
# - shoc
#   - sort

# Each directory will contain a script to iterate through all the devices
declare -a benchmarks=(AMD/BinarySearch AMD/StringSearch AMD/BitonicSort AMD/FloydWarshall'rodinia/bfs rodinia/nw shoc/sort');

for benchmark in ${benchmarks[@]}
do
  (
    export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/home/sam/src/esdg-opencl/testing/integer/AMD/SDKUtil
    cd $benchmark
    make clean
    make
    bash ./run > output &
  )
done
